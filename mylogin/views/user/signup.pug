extends ../layouts/layout

block content
  .row#cntforsignup
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-body
          h1 
            strong Sign Up
          if messages.length > 0
            .alert.alert-danger
              each message in messages
                p #{ message }
          form(action = "/signup", method = "post")
            .form-group
              label(for="username") Username
              input(type="text" id="username" name="username").form-control
            .form-group
              label(for="email") E-Mail
              input(type="text" id="email" name="email").form-control
            .form-group
              label(for="password") Password
              input(type="password" id="password" name="password").form-control
              small#minimumcharacters Minimum of 6 characters in length
            .form-group
              label(for="confirmPassword") Re-enter Password
              input(type="password" id="confirmPassword" name="confirmPassword").form-control
            input(type="hidden" name = "_csrf" value = csrfToken)
            button(type="submit").btn.btn-primary
              strong Sign Up
